    "version": "2.0.0",
    "tasks": [
        {
            "label": "build: pygbag",
            "type": "shell",
            "command": "pygbag .",
            "group": "build"
        },
        {
            "label": "build: python",
            "type": "shell",
            "command": "python -m venv .venv",
            "group": "build"
        },
        {
            "label": "build: modules",
            "type": "shell",
            "command": "./src/scripts/build.sh",
            "windows": {
                "command": ".\\src\\scripts\\build.cmd"
            },
        }
    ]
}